<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/add_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:padding="8dp"
            android:elevation="2dp"/>




        <ImageView
            android:id="@+id/select_recipe_background_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/select_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:text="name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_recipe_name"
            android:id="@+id/select_recipe_linear_calorie"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/select_recipe_calorie_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/fire"/>

            <TextView
                android:id="@+id/select_recipe_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calorie"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_recipe_linear_calorie"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/select_recipe_linear_time">

                <ImageView
                    android:id="@+id/select_recipe_time_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/clock"/>

                <TextView
                    android:id="@+id/select_recipe_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="time"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/select_recipe_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_recipe_linear_time"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star_filled" />
            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
